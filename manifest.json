{
  "manifest_version": 3,
  "name": "Guiqin ",
  "description": "Guiqin (桂琴) is a Google Chrome extension for checking the learning status of Chinese words and their basic statistics.",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}